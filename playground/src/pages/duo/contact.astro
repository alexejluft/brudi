---
import DuoLayout from '../../layouts/DuoLayout.astro';

const socialLinks = [
  { name: "Instagram", handle: "@alexej_zouk", url: "https://instagram.com/alexej_zouk" },
  { name: "YouTube", handle: "@AF_Brazilian_Zouk_Freiburg", url: "https://youtube.com/@AF_Brazilian_Zouk_Freiburg" },
  { name: "GitHub", handle: "alexejluft", url: "https://github.com/alexejluft" },
  { name: "Email", handle: "alexejluft@aol.com", url: "mailto:alexejluft@aol.com" },
];

const locations = [
  { city: "Freiburg", country: "Germany", description: "Salsa con Pasión" },
  { city: "Basel", country: "Switzerland", description: "Bachata Basel" },
];
---

<DuoLayout title="Contact">
  
  <div class="contact-page">
    
    <!-- Hero -->
    <section class="page-hero">
      <div class="hero-content">
        <span class="page-label">Contact</span>
        <h1 class="page-title">Let's talk</h1>
        <p class="page-intro">
          Have a project in mind? Want to collaborate?<br/>
          Or just want to say hello? We'd love to hear from you.
        </p>
      </div>
    </section>

    <!-- Contact Grid -->
    <section class="contact-section">
      <div class="contact-grid">
        
        <!-- Contact Form -->
        <div class="form-column">
          <h2 class="form-title">Send a message</h2>
          <form class="contact-form" id="contact-form">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" id="name" name="name" placeholder="Your name" required>
            </div>
            
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" placeholder="your@email.com" required>
            </div>
            
            <div class="form-group">
              <label for="subject">Subject</label>
              <select id="subject" name="subject" required>
                <option value="" disabled selected>What's this about?</option>
                <option value="project">Project Inquiry</option>
                <option value="collaboration">Collaboration</option>
                <option value="consultation">1:1 Consultation</option>
                <option value="other">Just saying hello</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="budget">Budget (optional)</label>
              <select id="budget" name="budget">
                <option value="" selected>Select a range</option>
                <option value="<5k">Under €5,000</option>
                <option value="5k-10k">€5,000 - €10,000</option>
                <option value="10k-25k">€10,000 - €25,000</option>
                <option value="25k+">€25,000+</option>
              </select>
            </div>
            
            <div class="form-group full-width">
              <label for="message">Message</label>
              <textarea id="message" name="message" rows="6" placeholder="Tell us about your project..." required></textarea>
            </div>
            
            <div class="form-footer">
              <button type="submit" class="submit-button">
                <span>Send Message</span>
                <span class="button-arrow">→</span>
              </button>
              <p class="form-note">We typically respond within 24 hours.</p>
            </div>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div class="info-column">
          
          <!-- Social Links -->
          <div class="info-section">
            <h3 class="info-title">Connect</h3>
            <ul class="social-list">
              {socialLinks.map(link => (
                <li>
                  <a href={link.url} target="_blank" rel="noopener" class="social-link">
                    <span class="social-name">{link.name}</span>
                    <span class="social-handle">{link.handle}</span>
                  </a>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Locations -->
          <div class="info-section">
            <h3 class="info-title">Locations</h3>
            <ul class="location-list">
              {locations.map(loc => (
                <li class="location-item">
                  <span class="location-city">{loc.city}</span>
                  <span class="location-country">{loc.country}</span>
                  <span class="location-desc">{loc.description}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Availability -->
          <div class="info-section">
            <h3 class="info-title">Availability</h3>
            <div class="availability">
              <span class="status-dot available"></span>
              <span class="status-text">Currently accepting new projects</span>
            </div>
            <p class="availability-note">
              We typically take on 2-3 projects at a time to ensure we can give each one the attention it deserves.
            </p>
          </div>
          
        </div>
        
      </div>
    </section>

    <!-- FAQ -->
    <section class="faq-section">
      <div class="section-header">
        <h2 class="section-title">Common Questions</h2>
      </div>
      
      <div class="faq-list">
        <details class="faq-item">
          <summary>What's your typical project timeline?</summary>
          <p>Depends on scope. A landing page might take 2-3 weeks. A full web application could be 2-3 months. We'll give you a realistic estimate after understanding your requirements.</p>
        </details>
        <details class="faq-item">
          <summary>Do you work with clients remotely?</summary>
          <p>Yes! While we're based in Freiburg/Basel, most of our work is done remotely. We use async communication and video calls to stay aligned.</p>
        </details>
        <details class="faq-item">
          <summary>What technologies do you specialize in?</summary>
          <p>Frontend: React, Next.js, Astro, TypeScript. Backend: Node.js, Supabase, PostgreSQL. We choose the right tool for each project.</p>
        </details>
        <details class="faq-item">
          <summary>Do you offer maintenance after launch?</summary>
          <p>Yes. We offer ongoing maintenance packages for projects we build. Includes bug fixes, updates, and small enhancements.</p>
        </details>
      </div>
    </section>

    <!-- Map/Location Visual -->
    <section class="map-section">
      <div class="map-placeholder">
        <div class="map-content">
          <span class="map-label">Based in</span>
          <h2 class="map-location">Freiburg, Germany</h2>
          <p class="map-coordinates">47.9990° N, 7.8421° E</p>
        </div>
      </div>
    </section>

  </div>

</DuoLayout>

<style>
  .contact-page {
    padding-top: 8rem;
  }

  /* Hero */
  .page-hero {
    padding: 8rem 2rem;
    text-align: center;
    border-bottom: 1px solid var(--color-border);
  }
  
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .page-label {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    display: block;
    margin-bottom: 2rem;
  }
  
  .page-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 200;
    letter-spacing: -0.02em;
    margin-bottom: 2rem;
  }
  
  .page-intro {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.8;
  }

  /* Contact Grid */
  .contact-section {
    padding: 6rem 2rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .contact-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 6rem;
  }
  
  @media (max-width: 968px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 4rem;
    }
  }

  /* Form */
  .form-title {
    font-size: 1.5rem;
    font-weight: 300;
    margin-bottom: 2rem;
  }
  
  .contact-form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }
  
  @media (max-width: 600px) {
    .contact-form {
      grid-template-columns: 1fr;
    }
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .form-group.full-width {
    grid-column: 1 / -1;
  }
  
  .form-group label {
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }
  
  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 1rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    font-size: 1rem;
    transition: border-color 0.3s;
  }
  
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-text-muted);
  }
  
  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--color-text-muted);
  }
  
  .form-group select {
    cursor: pointer;
  }
  
  .form-group textarea {
    resize: vertical;
    min-height: 150px;
  }
  
  .form-footer {
    grid-column: 1 / -1;
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-top: 1rem;
  }
  
  @media (max-width: 600px) {
    .form-footer {
      flex-direction: column;
      align-items: flex-start;
    }
  }
  
  .submit-button {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    font-size: 1rem;
    padding: 1rem 2rem;
    background: var(--color-text);
    color: var(--color-bg);
    transition: gap 0.3s, background 0.3s;
  }
  
  .submit-button:hover {
    gap: 1.5rem;
    background: var(--color-accent);
  }
  
  .form-note {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  /* Info Column */
  .info-section {
    margin-bottom: 3rem;
  }
  
  .info-title {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .social-list {
    list-style: none;
  }
  
  .social-link {
    display: flex;
    justify-content: space-between;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border);
    transition: padding-left 0.3s;
  }
  
  .social-link:hover {
    padding-left: 1rem;
  }
  
  .social-name {
    font-size: 1rem;
  }
  
  .social-handle {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
  
  .location-list {
    list-style: none;
  }
  
  .location-item {
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border);
  }
  
  .location-city {
    font-size: 1.125rem;
    display: block;
    margin-bottom: 0.25rem;
  }
  
  .location-country {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    display: block;
    margin-bottom: 0.25rem;
  }
  
  .location-desc {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }
  
  .availability {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }
  
  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--color-text-muted);
  }
  
  .status-dot.available {
    background: #22c55e;
    box-shadow: 0 0 10px rgba(34, 197, 94, 0.5);
  }
  
  .status-text {
    font-size: 1rem;
  }
  
  .availability-note {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  /* FAQ */
  .faq-section {
    padding: 6rem 2rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .section-header {
    max-width: 800px;
    margin: 0 auto 3rem;
  }
  
  .section-title {
    font-size: 1.5rem;
    font-weight: 300;
  }
  
  .faq-list {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .faq-item {
    border-top: 1px solid var(--color-border);
  }
  
  .faq-item summary {
    padding: 1.5rem 0;
    font-size: 1rem;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    list-style: none;
  }
  
  .faq-item summary::-webkit-details-marker {
    display: none;
  }
  
  .faq-item summary::after {
    content: '+';
    font-size: 1.5rem;
    font-weight: 200;
    color: var(--color-text-muted);
    transition: transform 0.3s;
  }
  
  .faq-item[open] summary::after {
    transform: rotate(45deg);
  }
  
  .faq-item p {
    padding-bottom: 1.5rem;
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  /* Map */
  .map-section {
    height: 400px;
  }
  
  .map-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-bg) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }
  
  .map-label {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    display: block;
    margin-bottom: 1rem;
  }
  
  .map-location {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 200;
    margin-bottom: 0.5rem;
  }
  
  .map-coordinates {
    font-size: 0.875rem;
    font-family: monospace;
    color: var(--color-text-muted);
  }
</style>

<script>
  // Form handling (placeholder)
  const form = document.getElementById('contact-form');
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    // Here you would normally send to an API
    alert('Message sent! (Demo - no backend connected)');
  });
</script>
