    margin-bottom: 0.5rem;
  }
  
  .timeline-description {
    font-size: 1rem;
    color: var(--color-text-muted);
  }

  /* Skills */
  .skills-section {
    padding: 8rem 2rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .skills-grid {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 4rem;
  }
  
  @media (max-width: 968px) {
