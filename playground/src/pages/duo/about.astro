    }
  }
  
  .skill-title {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .skill-list {
    list-style: none;
  }
  
  .skill-list li {
    font-size: 1rem;
    padding: 0.5rem 0;
    color: #999;
  }

  /* Philosophy */
  .philosophy-section {
    padding: 8rem 2rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .philosophy-grid {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 4rem;
  }
  
  @media (max-width: 768px) {
    .philosophy-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .philosophy-item {
    padding: 2rem;
    border: 1px solid var(--color-border);
    transition: border-color 0.3s;
  }
  
  .philosophy-item:hover {
    border-color: var(--color-text-muted);
  }
  
  .philosophy-item h3 {
    font-size: 1.25rem;
    font-weight: 400;
    margin-bottom: 1rem;
  }
  
  .philosophy-item p {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  /* CTA */
  .cta-section {
    padding: 10rem 2rem;
    text-align: center;
  }
  
  .cta-content h2 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 200;
    margin-bottom: 3rem;
  }
  
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    font-size: 1.125rem;
    padding: 1rem 2rem;
    border: 1px solid var(--color-text);
    transition: background 0.3s, gap 0.3s;
  }
  
  .cta-button:hover {
    background: var(--color-text);
    color: var(--color-bg);
    gap: 1.5rem;
  }
</style>

<!-- Image Reveal Animation -->
<script>
  function initImageReveal() {
    const images = document.querySelectorAll('.member-image');
    
    if (!images.length) return;
    
    // Use Intersection Observer for reveal
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Add delay for stagger effect
          const index = Array.from(images).indexOf(entry.target);
          setTimeout(() => {
            entry.target.classList.add('revealed');
          }, index * 200);
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.3 });
    
    images.forEach(img => observer.observe(img));
  }
  
  // Run on load and after View Transitions
  if (document.readyState === 'complete') {
    initImageReveal();
  } else {
    window.addEventListener('load', initImageReveal);
  }
  document.addEventListener('astro:page-load', initImageReveal);
</script>
