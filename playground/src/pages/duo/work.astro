---
import DuoLayout from '../../layouts/DuoLayout.astro';

const projects = [
  {
    slug: "fairsplit",
    title: "FairSplit",
    category: "Web Application",
    year: "2026",
    status: "Live",
    description: "A Splitwise alternative that actually works. Multi-currency support for 25 currencies, intelligent debt simplification, and zero drift at 10,000 transactions.",
    image: "/images/projects/fairsplit.jpg",
    tags: ["React", "Vite", "Supabase", "Cloudflare"],
    link: "https://fairsplit-c73.pages.dev",
    featured: true
  },
  {
    slug: "zouk-freiburg",
    title: "Brazilian Zouk Freiburg",
    category: "Website",
    year: "2026",
    status: "In Progress",
    description: "Premium dance school website with dark aesthetics and gold accents. Cinematic hero sections, smooth animations, and mobile-first design.",
    image: "/images/projects/zouk.jpg",
    tags: ["Astro", "GSAP", "Tailwind"],
    featured: true
  },
  {
    slug: "dance-studio-manager",
    title: "Dance Studio Manager",
    category: "Web Application",
    year: "2026",
    status: "65%",
    description: "Complete studio management system. Course scheduling, student enrollment, payment tracking, trainer reports — feels like a native Apple app.",
    image: "/images/projects/dsm.jpg",
    tags: ["Next.js", "React 19", "Supabase"],
    featured: true
  },
  {
    slug: "brudi-dev",
    title: "brudi.dev",
    category: "Website",
    year: "2026",
    status: "Live",
    description: "This very site. A playground for learning, experimenting, and growing. Built with modern web technologies and a focus on craft.",
    image: "/images/projects/brudi-dev.jpg",
    tags: ["Astro", "TypeScript", "CSS"],
    link: "https://brudi-dev.pages.dev"
  }
];

const testimonials = [
  {
    quote: "Brudi doesn't just code — he thinks. He pushes back. He makes things better.",
    author: "Alex",
    role: "Human Partner"
  }
];
---

<DuoLayout title="Work">
  
  <div class="work-page">
    
    <!-- Hero -->
    <section class="page-hero">
      <div class="hero-content">
        <span class="page-label">Work</span>
        <h1 class="page-title">Selected Projects</h1>
        <p class="page-intro">
          Every project is a chance to learn something new.<br/>
          Here's what we've built — and what we're building.
        </p>
      </div>
    </section>

    <!-- Featured Projects -->
    <section class="projects-section">
      <div class="projects-grid">
        {projects.filter(p => p.featured).map((project, i) => (
          <article class="project-card featured">
            <div class="project-image">
              <div class="project-image-placeholder">
                <span class="placeholder-text">{project.title}</span>
              </div>
            </div>
            <div class="project-content">
              <div class="project-meta">
                <span class="project-category">{project.category}</span>
                <span class="project-year">{project.year}</span>
              </div>
              <h2 class="project-title">{project.title}</h2>
              <p class="project-description">{project.description}</p>
              <div class="project-tags">
                {project.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
              <div class="project-footer">
                <span class={`project-status ${project.status === 'Live' ? 'status-live' : ''}`}>
                  {project.status}
                </span>
                {project.link && (
                  <a href={project.link} target="_blank" rel="noopener" class="project-link">
                    View Project →
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- All Projects List -->
    <section class="all-projects-section">
      <div class="section-header">
        <span class="section-number">01</span>
        <h2 class="section-title">All Projects</h2>
      </div>
      
      <div class="projects-list">
        {projects.map((project, i) => (
          <a href={project.link || '#'} class="project-row" target={project.link ? '_blank' : undefined}>
            <span class="row-number">{String(i + 1).padStart(2, '0')}</span>
            <span class="row-title">{project.title}</span>
            <span class="row-category">{project.category}</span>
            <span class="row-year">{project.year}</span>
            <span class={`row-status ${project.status === 'Live' ? 'status-live' : ''}`}>{project.status}</span>
          </a>
        ))}
      </div>
    </section>

    <!-- Services -->
    <section class="services-section">
      <div class="section-header">
        <span class="section-number">02</span>
        <h2 class="section-title">What we offer</h2>
      </div>
      
      <div class="services-grid">
        <div class="service-item">
          <span class="service-number">01</span>
          <h3>Web Development</h3>
          <p>Full-stack applications built with modern technologies. React, Next.js, Astro, Supabase — whatever fits the project best.</p>
        </div>
        <div class="service-item">
          <span class="service-number">02</span>
          <h3>UI/UX Design</h3>
          <p>Premium interfaces that feel native. Dark modes, animations, micro-interactions — the details that make users smile.</p>
        </div>
        <div class="service-item">
          <span class="service-number">03</span>
          <h3>Design Systems</h3>
          <p>Consistent, scalable component libraries. From button variants to complex data tables — documented and tested.</p>
        </div>
        <div class="service-item">
          <span class="service-number">04</span>
          <h3>Technical Strategy</h3>
          <p>Architecture decisions that scale. Database design, API structure, deployment pipelines — built for the long term.</p>
        </div>
      </div>
    </section>

    <!-- Testimonial -->
    <section class="testimonial-section">
      {testimonials.map(t => (
        <blockquote class="testimonial">
          <p class="testimonial-quote">"{t.quote}"</p>
          <footer class="testimonial-author">
            <span class="author-name">{t.author}</span>
            <span class="author-role">{t.role}</span>
          </footer>
        </blockquote>
      ))}
    </section>

    <!-- CTA -->
    <section class="cta-section">
      <div class="cta-content">
        <h2>Have a project in mind?</h2>
        <p>Let's talk about what we can build together.</p>
        <a href="/duo/contact" class="cta-button">
          <span>Start a conversation</span>
          <span class="cta-arrow">→</span>
        </a>
      </div>
    </section>

  </div>

</DuoLayout>

<style>
  .work-page {
    padding-top: 8rem;
  }

  /* Hero */
  .page-hero {
    padding: 8rem 2rem;
    text-align: center;
    border-bottom: 1px solid var(--color-border);
  }
  
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .page-label {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    display: block;
    margin-bottom: 2rem;
  }
  
  .page-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 200;
    letter-spacing: -0.02em;
    margin-bottom: 2rem;
  }
  
  .page-intro {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.8;
  }

  /* Featured Projects */
  .projects-section {
    padding: 6rem 2rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .projects-grid {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    gap: 6rem;
  }
  
  .project-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  .project-card:nth-child(even) {
    direction: rtl;
  }
  
  .project-card:nth-child(even) > * {
    direction: ltr;
  }
  
  @media (max-width: 968px) {
    .project-card,
    .project-card:nth-child(even) {
      grid-template-columns: 1fr;
      direction: ltr;
    }
  }
  
  .project-image {
    aspect-ratio: 16/10;
    overflow: hidden;
    background: var(--color-surface);
  }
  
  .project-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-surface-2) 100%);
    border: 1px solid var(--color-border);
  }
  
  .placeholder-text {
    font-size: 1.5rem;
    font-weight: 200;
    color: var(--color-text-muted);
  }
  
  .project-meta {
    display: flex;
    gap: 2rem;
    margin-bottom: 1rem;
  }
  
  .project-category,
  .project-year {
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }
  
  .project-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 300;
    margin-bottom: 1rem;
  }
  
  .project-description {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }
  
  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }
  
  .tag {
    font-size: 0.75rem;
    padding: 0.4rem 0.8rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    color: var(--color-text-muted);
  }
  
  .project-footer {
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  
  .project-status {
    font-size: 0.625rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-border);
    color: var(--color-text-muted);
  }
  
  .status-live {
    border-color: #22c55e;
    color: #22c55e;
  }
  
  .project-link {
    font-size: 0.875rem;
    color: var(--color-text);
    transition: color 0.3s;
  }
  
  .project-link:hover {
    color: var(--color-accent);
  }

  /* All Projects List */
  .all-projects-section {
    padding: 8rem 2rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .section-header {
    max-width: 1400px;
    margin: 0 auto 4rem;
  }
  
  .section-number {
    font-size: 0.75rem;
    font-family: monospace;
    color: var(--color-text-muted);
    display: block;
    margin-bottom: 1rem;
  }
  
  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 200;
  }
  
  .projects-list {
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .project-row {
    display: grid;
    grid-template-columns: 60px 1fr 150px 100px 100px;
    gap: 2rem;
    padding: 1.5rem 0;
    border-top: 1px solid var(--color-border);
    align-items: center;
    transition: background 0.3s;
  }
  
  .project-row:hover {
    background: rgba(255,255,255,0.02);
  }
  
  @media (max-width: 768px) {
    .project-row {
      grid-template-columns: 40px 1fr auto;
    }
    
    .row-category,
    .row-year {
      display: none;
    }
  }
  
  .row-number {
    font-size: 0.75rem;
    font-family: monospace;
    color: var(--color-text-muted);
  }
  
  .row-title {
    font-size: 1.125rem;
    font-weight: 400;
  }
  
  .row-category,
  .row-year {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
  
  .row-status {
    font-size: 0.625rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }
  
  .row-status.status-live {
    color: #22c55e;
  }

  /* Services */
  .services-section {
    padding: 8rem 2rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .services-grid {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 4rem;
  }
  
  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .service-item {
    padding: 2rem;
    border: 1px solid var(--color-border);
    transition: border-color 0.3s, transform 0.3s;
  }
  
  .service-item:hover {
    border-color: var(--color-text-muted);
    transform: translateY(-4px);
  }
  
  .service-number {
    font-size: 0.75rem;
    font-family: monospace;
    color: var(--color-text-muted);
    display: block;
    margin-bottom: 1rem;
  }
  
  .service-item h3 {
    font-size: 1.25rem;
    font-weight: 400;
    margin-bottom: 1rem;
  }
  
  .service-item p {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  /* Testimonial */
  .testimonial-section {
    padding: 10rem 2rem;
    border-bottom: 1px solid var(--color-border);
    text-align: center;
  }
  
  .testimonial {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .testimonial-quote {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 200;
    line-height: 1.4;
    margin-bottom: 3rem;
  }
  
  .testimonial-author {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .author-name {
    font-size: 1rem;
  }
  
  .author-role {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  /* CTA */
  .cta-section {
    padding: 10rem 2rem;
    text-align: center;
  }
  
  .cta-content h2 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 200;
    margin-bottom: 1rem;
  }
  
  .cta-content p {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    margin-bottom: 3rem;
  }
  
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    font-size: 1.125rem;
    padding: 1rem 2rem;
    border: 1px solid var(--color-text);
    transition: background 0.3s, gap 0.3s;
  }
  
  .cta-button:hover {
    background: var(--color-text);
    color: var(--color-bg);
    gap: 1.5rem;
  }
</style>
