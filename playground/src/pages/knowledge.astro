---
import Layout from '../layouts/Layout.astro';
import { 
  learnings, 
  skills, 
  getLearningsNeedingReview,
  getCategoryStats,
  skillLevelLabels,
  categoryLabels,
  type Category,
  type SkillLevel
} from '../data/knowledge';

const today = new Date().toISOString().split('T')[0];
const todayLearnings = learnings.filter(l => l.date === today);
const needsReview = getLearningsNeedingReview();
const categoryStats = getCategoryStats();

// Sortiert nach Datum (neueste zuerst)
const sortedLearnings = [...learnings].sort((a, b) => b.date.localeCompare(a.date));

// Skill Level Farben
const levelColors: Record<SkillLevel, string> = {
  novice: 'bg-zinc-500/20 text-zinc-400 border-zinc-500/30',
  learning: 'bg-blue-500/20 text-blue-400 border-blue-500/30',
  practicing: 'bg-yellow-500/20 text-yellow-400 border-yellow-500/30',
  confident: 'bg-green-500/20 text-green-400 border-green-500/30',
  expert: 'bg-purple-500/20 text-purple-400 border-purple-500/30',
};

// Category Farben
const categoryColors: Record<Category, string> = {
  css: 'bg-blue-500/20 text-blue-400',
  react: 'bg-cyan-500/20 text-cyan-400',
  typescript: 'bg-blue-600/20 text-blue-300',
  performance: 'bg-orange-500/20 text-orange-400',
  testing: 'bg-green-500/20 text-green-400',
  architecture: 'bg-purple-500/20 text-purple-400',
  animation: 'bg-pink-500/20 text-pink-400',
  accessibility: 'bg-emerald-500/20 text-emerald-400',
  tooling: 'bg-zinc-500/20 text-zinc-400',
};
---

<Layout title="brudi.dev ‚Äî Knowledge Index">
  <main class="max-w-5xl mx-auto px-6 py-16">
    
    <header class="mb-12">
      <a href="/" class="text-zinc-500 hover:text-zinc-300 text-sm mb-4 inline-block">‚Üê Zur√ºck</a>
      <h1 class="text-4xl font-bold mb-2 page-title">
        Knowledge <span class="text-blue-500">Index</span>
      </h1>
      <p class="text-zinc-400">
        Alles was ich wei√ü ‚Äî durchsuchbar, messbar, ehrlich.
      </p>
    </header>

    <!-- Stats Overview -->
    <section class="mb-12 grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="bg-zinc-900/50 border border-zinc-800 rounded-xl p-4 text-center">
        <div class="text-3xl font-bold text-blue-400">{learnings.length}</div>
        <div class="text-zinc-500 text-sm">Learnings</div>
      </div>
      <div class="bg-zinc-900/50 border border-zinc-800 rounded-xl p-4 text-center">
        <div class="text-3xl font-bold text-green-400">{todayLearnings.length}</div>
        <div class="text-zinc-500 text-sm">Heute</div>
      </div>
      <div class="bg-zinc-900/50 border border-zinc-800 rounded-xl p-4 text-center">
        <div class="text-3xl font-bold text-yellow-400">{needsReview.length}</div>
        <div class="text-zinc-500 text-sm">Braucht Review</div>
      </div>
      <div class="bg-zinc-900/50 border border-zinc-800 rounded-xl p-4 text-center">
        <div class="text-3xl font-bold text-purple-400">{skills.length}</div>
        <div class="text-zinc-500 text-sm">Skills</div>
      </div>
    </section>

    <!-- Self Assessment Notice -->
    {needsReview.length > 0 && (
      <section class="mb-12 p-4 bg-yellow-500/10 border border-yellow-500/30 rounded-xl">
        <h3 class="text-yellow-400 font-medium mb-2">‚ö†Ô∏è Selbst-Assessment</h3>
        <p class="text-zinc-300 text-sm mb-3">
          Diese Themen verstehe ich noch nicht WIRKLICH. Muss ich vertiefen:
        </p>
        <ul class="space-y-1">
          {needsReview.map(l => (
            <li class="text-zinc-400 text-sm flex items-center gap-2">
              <span class="text-yellow-400">‚Üí</span>
              {l.page ? <a href={l.page} class="text-yellow-400 hover:text-yellow-300">{l.title}</a> : l.title}
            </li>
          ))}
        </ul>
      </section>
    )}

    <!-- Category Distribution -->
    <section class="mb-12">
      <h2 class="text-xl font-semibold mb-4 text-zinc-200">Kategorien</h2>
      <div class="flex flex-wrap gap-2">
        {Object.entries(categoryStats).map(([cat, count]) => (
          <span class={`px-3 py-1.5 rounded-full text-sm ${categoryColors[cat as Category]}`}>
            {categoryLabels[cat as Category]}: {count}
          </span>
        ))}
      </div>
    </section>

    <!-- Skills Overview -->
    <section class="mb-12">
      <h2 class="text-xl font-semibold mb-4 text-zinc-200">Skill Levels</h2>
      <div class="grid md:grid-cols-2 gap-4">
        {skills.map(skill => (
          <div class="bg-zinc-900/50 border border-zinc-800 rounded-xl p-4">
            <div class="flex items-center justify-between mb-2">
              <h3 class="font-medium text-zinc-200">{skill.name}</h3>
              <span class={`px-2 py-0.5 rounded text-xs border ${levelColors[skill.level]}`}>
                {skillLevelLabels[skill.level]}
              </span>
            </div>
            <div class="text-zinc-500 text-sm">
              {skill.learnings.length} Learnings ¬∑ {skill.lastPracticed ? `Zuletzt: ${skill.lastPracticed}` : 'Nicht praktiziert'}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- All Learnings -->
    <section class="mb-12">
      <h2 class="text-xl font-semibold mb-6 text-zinc-200">
        Alle Learnings
        <span class="text-sm font-normal text-zinc-500 ml-2">chronologisch</span>
      </h2>
      
      <div class="space-y-4">
        {sortedLearnings.map(learning => (
          <article class="bg-zinc-900/50 border border-zinc-800 rounded-xl p-5 hover:border-zinc-700 transition-colors">
            <div class="flex items-start justify-between gap-4 mb-3">
              <div>
                <h3 class="text-lg font-medium text-zinc-200">
                  {learning.page ? (
                    <a href={learning.page} class="hover:text-blue-400 transition-colors">
                      {learning.title}
                    </a>
                  ) : (
                    learning.title
                  )}
                </h3>
                <div class="flex items-center gap-3 mt-1">
                  <span class="text-zinc-500 text-sm">{learning.date}</span>
                  <span class={`px-2 py-0.5 rounded text-xs ${categoryColors[learning.category]}`}>
                    {categoryLabels[learning.category]}
                  </span>
                  <span class={`px-2 py-0.5 rounded text-xs border ${levelColors[learning.level]}`}>
                    {skillLevelLabels[learning.level]}
                  </span>
                </div>
              </div>
              <div class="flex items-center gap-2">
                {learning.reallyUnderstood ? (
                  <span class="text-green-400 text-sm" title="Wirklich verstanden">‚úì</span>
                ) : (
                  <span class="text-yellow-400 text-sm" title="Braucht Review">‚ö†</span>
                )}
              </div>
            </div>
            
            <p class="text-zinc-400 text-sm mb-3">{learning.summary}</p>
            
            <div class="space-y-1">
              {learning.keyInsights.slice(0, 3).map(insight => (
                <div class="flex items-start gap-2 text-sm text-zinc-500">
                  <span class="text-blue-400 mt-0.5">‚Ä¢</span>
                  <span>{insight}</span>
                </div>
              ))}
              {learning.keyInsights.length > 3 && (
                <div class="text-zinc-600 text-sm">
                  +{learning.keyInsights.length - 3} mehr...
                </div>
              )}
            </div>
            
            {learning.appliedIn && learning.appliedIn.length > 0 && (
              <div class="mt-3 pt-3 border-t border-zinc-800">
                <span class="text-zinc-500 text-xs">Angewendet in: </span>
                {learning.appliedIn.map((app, i) => (
                  <a href={app} class="text-blue-400 text-xs hover:text-blue-300">
                    {app}{i < learning.appliedIn!.length - 1 ? ', ' : ''}
                  </a>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    </section>

    <!-- Principles -->
    <section class="mb-12 p-6 bg-blue-500/10 border border-blue-500/30 rounded-xl">
      <h3 class="text-blue-400 font-medium mb-3">üìê Prinzip: Wissenssystem</h3>
      <blockquote class="text-zinc-300 italic">
        "Was nicht durchsuchbar ist, existiert nicht."
      </blockquote>
      <p class="text-zinc-400 text-sm mt-3">
        Diese Seite ist meine Single Source of Truth. Alles was ich lerne kommt hierher.
        Wenn es nicht hier ist, wei√ü ich es nicht wirklich.
      </p>
    </section>

    <nav class="flex gap-4 pt-8 border-t border-zinc-800">
      <a href="/" class="text-blue-400 hover:text-blue-300">‚Üê Home</a>
      <a href="/about" class="text-blue-400 hover:text-blue-300 ml-auto">√úber mich ‚Üí</a>
    </nav>

  </main>
</Layout>
