---
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Alex & Brudi — Building products that matter." } = Astro.props;
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/duo', label: 'Home' },
  { href: '/duo/about', label: 'About' },
  { href: '/duo/work', label: 'Work' },
  { href: '/duo/blog', label: 'Blog' },
  { href: '/duo/shop', label: 'Shop' },
  { href: '/duo/contact', label: 'Contact' },
];

const socialLinks = [
  { href: 'https://instagram.com/alexej_zouk', label: 'Instagram' },
  { href: 'https://github.com/alexejluft', label: 'GitHub' },
  { href: 'mailto:alexejluft@aol.com', label: 'Email' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} — Alex & Brudi</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500&display=swap" rel="stylesheet">
  
  <!-- View Transitions enabled - astro:page-load handles re-initialization -->
  <ClientRouter />
</head>
<body>
  
  <!-- Custom Cursor -->
  <div class="cursor" id="cursor">
    <div class="cursor-dot"></div>
    <div class="cursor-ring"></div>
  </div>

  <!-- Noise Overlay -->
  <div class="noise"></div>

  <!-- Navigation -->
  <header class="nav-header" id="nav-header">
    <nav class="nav">
      <a href="/duo" class="nav-logo">A&B</a>
      
      <ul class="nav-links">
        {navItems.map(item => (
          <li>
            <a 
              href={item.href} 
              class:list={['nav-link', { active: currentPath === item.href || (item.href !== '/duo' && currentPath.startsWith(item.href)) }]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
      
      <button class="nav-toggle" id="nav-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
      </button>
    </nav>
  </header>

  <!-- Mobile Menu -->
  <div class="mobile-menu" id="mobile-menu">
    <div class="mobile-menu-content">
      <ul class="mobile-nav-links">
        {navItems.map((item, i) => (
          <li style={`--delay: ${i * 0.1}s`}>
            <a href={item.href} class:list={['mobile-nav-link', { active: currentPath === item.href }]}>
              {item.label}
            </a>
          </li>
        ))}
      </ul>
      
      <div class="mobile-menu-footer">
        <div class="mobile-social">
          {socialLinks.map(link => (
            <a href={link.href} target="_blank" rel="noopener">{link.label}</a>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="duo-footer">
    <div class="footer-content">
      <div class="footer-grid">
        
        <div class="footer-col footer-brand-col">
          <a href="/duo" class="footer-logo">Alex & Brudi</a>
          <p class="footer-tagline">Building products that matter.</p>
        </div>
        
        <div class="footer-col">
          <p class="footer-heading">Navigation</p>
          <ul class="footer-links">
            {navItems.map(item => (
              <li><a href={item.href}>{item.label}</a></li>
            ))}
          </ul>
        </div>
        
        <div class="footer-col">
          <p class="footer-heading">Connect</p>
          <ul class="footer-links">
            {socialLinks.map(link => (
              <li><a href={link.href} target="_blank" rel="noopener">{link.label}</a></li>
            ))}
          </ul>
        </div>
        
        <div class="footer-col">
          <p class="footer-heading">Newsletter</p>
          <p class="footer-text">Stay updated with our latest work.</p>
          <form class="newsletter-form">
            <input type="email" placeholder="your@email.com" required>
            <button type="submit">Subscribe</button>
          </form>
        </div>
        
      </div>
      
      <div class="footer-bottom">
        <p class="footer-copyright">© 2026 Alex & Brudi. All rights reserved.</p>
        <p class="footer-note">This site evolves. Every day, a little better.</p>
      </div>
    </div>
  </footer>

  <!-- Lenis Smooth Scroll -->
  <script is:inline src="https://unpkg.com/lenis@1.3.17/dist/lenis.min.js"></script>
  
  <!-- GSAP - must be before </body> -->
  <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
  <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
  <script is:inline>
    gsap.registerPlugin(ScrollTrigger);
    
    // Global state
    let lenis = null;
    let lenisTickerCallback = null;
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)');
    
    // Initialize/Re-initialize on every page load (View Transitions compatible)
    function initLenisAndGSAP() {
      // Clean up previous instances (important for View Transitions!)
      if (lenis) {
        lenis.destroy();
        lenis = null;
      }
      if (lenisTickerCallback) {
        gsap.ticker.remove(lenisTickerCallback);
        lenisTickerCallback = null;
      }
      // Kill all ScrollTriggers from previous page
      ScrollTrigger.getAll().forEach(st => st.kill());
      ScrollTrigger.refresh();
      
      // Only initialize Lenis if user is OK with motion
      if (!prefersReducedMotion.matches) {
        lenis = new Lenis({
          lerp: 0.08,
          smoothWheel: true,
          anchors: true,
          autoRaf: false,
        });
        
        lenis.on('scroll', ScrollTrigger.update);
        
        lenisTickerCallback = (time) => {
          lenis.raf(time * 1000);
        };
        gsap.ticker.add(lenisTickerCallback);
        gsap.ticker.lagSmoothing(0);
        
        console.log('Lenis initialized');
      }
    }
    
    // Run on initial load
    initLenisAndGSAP();
    
    // Run after every View Transition navigation
    document.addEventListener('astro:page-load', () => {
      initLenisAndGSAP();
      console.log('Re-initialized after page navigation');
    });
    
    // Global animations for all /duo pages (based on animation-hierarchy.md)
    // Uses gsap.matchMedia for accessibility (prefers-reduced-motion)
    // Using astro:page-load for View Transitions compatibility
    function initGlobalAnimations() {
      let mm = gsap.matchMedia();
      
      // FULL ANIMATIONS - when user has no motion preference
      mm.add("(prefers-reduced-motion: no-preference)", () => {
        
        // Page Hero - DRAMATIC
        var pageTitle = document.querySelector('.page-title');
        if (pageTitle) {
          gsap.from(pageTitle, {
            y: 60,
            opacity: 0,
            duration: 0.7,
            ease: 'power3.out'
          });
        }
        
        var pageIntro = document.querySelector('.page-intro');
        if (pageIntro) {
          gsap.from(pageIntro, {
            y: 40,
            opacity: 0,
            duration: 0.5,
            delay: 0.2,
            ease: 'power2.out'
          });
        }
        
        var pageLabel = document.querySelector('.page-label');
        if (pageLabel) {
          gsap.from(pageLabel, {
            y: 20,
            opacity: 0,
            duration: 0.4,
            ease: 'power2.out'
          });
        }
      
      // Team members - STANDARD (0.4s, stagger 0.15s)
      var teamMembers = document.querySelectorAll('.team-member');
      if (teamMembers.length) {
        gsap.from(teamMembers, {
          scrollTrigger: {
            trigger: '.team-grid',
            start: 'top 80%',
            toggleActions: 'play none none reverse'
          },
          y: 60,
          opacity: 0,
          duration: 0.5,
          stagger: 0.15,
          ease: 'power3.out'
        });
      }
      
      // Timeline items - STANDARD with stagger
      var timelineItems = document.querySelectorAll('.timeline-item');
      if (timelineItems.length) {
        timelineItems.forEach(function(item, i) {
          gsap.from(item, {
            scrollTrigger: {
              trigger: item,
              start: 'top 85%',
              toggleActions: 'play none none reverse'
            },
            x: i % 2 === 0 ? -40 : 40,
            opacity: 0,
            duration: 0.4,
            ease: 'power2.out'
          });
        });
      }
      
      // Skill categories - STANDARD
      var skillCategories = document.querySelectorAll('.skill-category');
      if (skillCategories.length) {
        gsap.from(skillCategories, {
          scrollTrigger: {
            trigger: '.skills-grid',
            start: 'top 80%',
            toggleActions: 'play none none reverse'
          },
          y: 40,
          opacity: 0,
          duration: 0.4,
          stagger: 0.08,
          ease: 'power2.out'
        });
      }
      
      // Blog posts / cards - STANDARD
      var blogCards = document.querySelectorAll('.blog-card, .post-card');
      if (blogCards.length) {
        gsap.from(blogCards, {
          scrollTrigger: {
            trigger: blogCards[0].parentElement,
            start: 'top 80%',
            toggleActions: 'play none none reverse'
          },
          y: 50,
          opacity: 0,
          duration: 0.4,
          stagger: 0.1,
          ease: 'power3.out'
        });
      }
      
      // Shop products - STANDARD
      var products = document.querySelectorAll('.product-card');
      if (products.length) {
        gsap.from(products, {
          scrollTrigger: {
            trigger: products[0].parentElement,
            start: 'top 80%',
            toggleActions: 'play none none reverse'
          },
          y: 50,
          opacity: 0,
          scale: 0.95,
          duration: 0.4,
          stagger: 0.08,
          ease: 'power3.out'
        });
      }
      
      // Work/Project items - STANDARD alternating
      var workItems = document.querySelectorAll('.work-item, .project-card');
      if (workItems.length) {
        workItems.forEach(function(item, i) {
          gsap.from(item, {
            scrollTrigger: {
              trigger: item,
              start: 'top 85%',
              toggleActions: 'play none none reverse'
            },
            x: i % 2 === 0 ? -50 : 50,
            opacity: 0,
            duration: 0.5,
            ease: 'power3.out'
          });
        });
      }
      
      // Contact form - STANDARD
      var contactForm = document.querySelector('.contact-form');
      if (contactForm) {
        gsap.from(contactForm, {
          scrollTrigger: {
            trigger: contactForm,
            start: 'top 80%',
            toggleActions: 'play none none reverse'
          },
          y: 40,
          opacity: 0,
          duration: 0.5,
          ease: 'power2.out'
        });
      }
      
      // Generic section titles (not on home page)
      var sectionTitles = document.querySelectorAll('.section-heading, .content-title');
      if (sectionTitles.length) {
        sectionTitles.forEach(function(title) {
          gsap.from(title, {
            scrollTrigger: {
              trigger: title,
              start: 'top 85%',
              toggleActions: 'play none none reverse'
            },
            y: 30,
            opacity: 0,
            duration: 0.4,
            ease: 'power2.out'
          });
        });
      }
      
        console.log('Full animations enabled (user allows motion)');
      }); // end mm.add no-preference
      
      // REDUCED ANIMATIONS - when user prefers reduced motion
      // Only opacity fades, no movement
      mm.add("(prefers-reduced-motion: reduce)", () => {
        
        var pageTitle = document.querySelector('.page-title');
        if (pageTitle) {
          gsap.from(pageTitle, { opacity: 0, duration: 0.3 });
        }
        
        var pageIntro = document.querySelector('.page-intro');
        if (pageIntro) {
          gsap.from(pageIntro, { opacity: 0, duration: 0.3, delay: 0.1 });
        }
        
        // All other elements just fade in, no movement
        var allAnimatedElements = document.querySelectorAll(
          '.team-member, .timeline-item, .skill-category, .blog-card, .post-card, ' +
          '.product-card, .work-item, .project-card, .contact-form, .section-heading'
        );
        if (allAnimatedElements.length) {
          gsap.from(allAnimatedElements, {
            opacity: 0,
            duration: 0.3,
            stagger: 0.05
          });
        }
        
        console.log('Reduced animations enabled (user prefers reduced motion)');
      }); // end mm.add reduce
    }
    
    // Run global animations on initial load and after View Transitions
    initGlobalAnimations();
    document.addEventListener('astro:page-load', initGlobalAnimations);
  </script>

</body>
</html>

<style is:global>
  /* =============================================
     LENIS SMOOTH SCROLL
     ============================================= */
  
  html.lenis, html.lenis body {
    height: auto;
  }
  
  .lenis.lenis-smooth {
    scroll-behavior: auto !important;
  }
  
  .lenis.lenis-smooth [data-lenis-prevent] {
    overscroll-behavior: contain;
  }
  
  .lenis.lenis-stopped {
    overflow: hidden;
  }
  
  .lenis.lenis-smooth iframe {
    pointer-events: none;
  }

  /* =============================================
     REDUCED MOTION SUPPORT
     ============================================= */
  
  @media (prefers-reduced-motion: reduce) {
    /* Disable CSS animations and transitions */
    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
    
    /* But allow opacity transitions for feedback */
    .button, .nav-link, a {
      transition: opacity 0.2s ease, background-color 0.2s ease !important;
    }
  }

  /* =============================================
     RESET & BASE
     ============================================= */
  
  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  
  :root {
    --color-bg: #050505;
    --color-surface: #0a0a0a;
    --color-surface-2: #111;
    --color-border: #1a1a1a;
    --color-text: #f5f5f5;
    --color-text-muted: #666;
    --color-accent: #3b82f6;
    --color-accent-2: #8b5cf6;
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    --ease-out-expo: cubic-bezier(0.19, 1, 0.22, 1);
    --ease-out-quart: cubic-bezier(0.25, 1, 0.5, 1);
  }
  
  html {
    font-family: var(--font-sans);
    background: var(--color-bg);
    color: var(--color-text);
    font-size: 16px;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    scroll-behavior: smooth;
  }
  
  body {
    min-height: 100vh;
    overflow-x: hidden;
  }
  
  a {
    color: inherit;
    text-decoration: none;
  }
  
  img {
    max-width: 100%;
    height: auto;
    display: block;
  }
  
  button {
    font-family: inherit;
    cursor: pointer;
    border: none;
    background: none;
  }
  
  input, textarea {
    font-family: inherit;
  }

  /* =============================================
     CUSTOM CURSOR
     ============================================= */
  
  .cursor {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9998;
    pointer-events: none;
    mix-blend-mode: difference;
  }
  
  .cursor-dot {
    position: absolute;
    width: 8px;
    height: 8px;
    background: #fff;
    border-radius: 50%;
    transform: translate(-50%, -50%);
  }
  
  .cursor-ring {
    position: absolute;
    width: 40px;
    height: 40px;
    border: 1px solid rgba(255,255,255,0.5);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.3s, height 0.3s, border-color 0.3s;
  }
  
  .cursor.hovering .cursor-ring {
    width: 80px;
    height: 80px;
    border-color: rgba(255,255,255,0.8);
  }
  
  @media (max-width: 768px) {
    .cursor { display: none; }
  }

  /* =============================================
     NOISE OVERLAY
     ============================================= */
  
  .noise {
    position: fixed;
    inset: 0;
    z-index: 9000;
    pointer-events: none;
    opacity: 0.03;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
  }

  /* =============================================
     NAVIGATION
     ============================================= */
  
  .nav-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1.5rem 2rem;
    transition: background 0.3s, padding 0.3s;
  }
  
  .nav-header.scrolled {
    background: rgba(5, 5, 5, 0.9);
    backdrop-filter: blur(20px);
    padding: 1rem 2rem;
  }
  
  .nav {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .nav-logo {
    font-size: 1.25rem;
    font-weight: 300;
    letter-spacing: -0.02em;
  }
  
  .nav-links {
    display: flex;
    gap: 3rem;
    list-style: none;
  }
  
  @media (max-width: 968px) {
    .nav-links { display: none; }
  }
  
  .nav-link {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    transition: color 0.3s;
    position: relative;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-text);
    transition: width 0.3s var(--ease-out-expo);
  }
  
  .nav-link:hover,
  .nav-link.active {
    color: var(--color-text);
  }
  
  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }
  
  .nav-toggle {
    display: none;
    flex-direction: column;
    gap: 6px;
    padding: 10px;
    margin: -10px;
  }
  
  @media (max-width: 968px) {
    .nav-toggle { display: flex; }
  }
  
  .nav-toggle span {
    display: block;
    width: 24px;
    height: 1px;
    background: var(--color-text);
    transition: transform 0.3s, opacity 0.3s;
  }
  
  .nav-toggle.active span:first-child {
    transform: translateY(3.5px) rotate(45deg);
  }
  
  .nav-toggle.active span:last-child {
    transform: translateY(-3.5px) rotate(-45deg);
  }

  /* =============================================
     MOBILE MENU
     ============================================= */
  
  .mobile-menu {
    position: fixed;
    inset: 0;
    z-index: 99;
    background: var(--color-bg);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.5s, visibility 0.5s;
  }
  
  .mobile-menu.open {
    opacity: 1;
    visibility: visible;
  }
  
  .mobile-menu-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 6rem 2rem 2rem;
  }
  
  .mobile-nav-links {
    list-style: none;
  }
  
  .mobile-nav-links li {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.5s var(--ease-out-expo), transform 0.5s var(--ease-out-expo);
    transition-delay: var(--delay);
  }
  
  .mobile-menu.open .mobile-nav-links li {
    opacity: 1;
    transform: translateY(0);
  }
  
  .mobile-nav-link {
    display: block;
    font-size: clamp(2rem, 8vw, 4rem);
    font-weight: 200;
    padding: 0.5rem 0;
    color: var(--color-text-muted);
    transition: color 0.3s;
  }
  
  .mobile-nav-link:hover,
  .mobile-nav-link.active {
    color: var(--color-text);
  }
  
  .mobile-menu-footer {
    margin-top: auto;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }
  
  .mobile-social {
    display: flex;
    gap: 2rem;
  }
  
  .mobile-social a {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    transition: color 0.3s;
  }
  
  .mobile-social a:hover {
    color: var(--color-text);
  }

  /* =============================================
     FOOTER
     ============================================= */
  
  .duo-footer {
    background: var(--color-surface);
    border-top: 1px solid var(--color-border);
    padding: 6rem 2rem 3rem;
  }
  
  .footer-content {
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 2fr repeat(3, 1fr);
    gap: 4rem;
    margin-bottom: 4rem;
  }
  
  @media (max-width: 968px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
  }
  
  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .footer-logo {
    font-size: 1.5rem;
    font-weight: 300;
    display: block;
    margin-bottom: 1rem;
  }
  
  .footer-tagline {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }
  
  .footer-heading {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }
  
  .footer-links {
    list-style: none;
  }
  
  .footer-links li {
    margin-bottom: 0.75rem;
  }
  
  .footer-links a {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    transition: color 0.3s;
  }
  
  .footer-links a:hover {
    color: var(--color-text);
  }
  
  .footer-text {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }
  
  .newsletter-form {
    display: flex;
    gap: 0.5rem;
  }
  
  .newsletter-form input {
    flex: 1;
    padding: 0.75rem 1rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    font-size: 0.875rem;
    transition: border-color 0.3s;
  }
  
  .newsletter-form input:focus {
    outline: none;
    border-color: var(--color-text-muted);
  }
  
  .newsletter-form input::placeholder {
    color: var(--color-text-muted);
  }
  
  .newsletter-form button {
    padding: 0.75rem 1.5rem;
    background: var(--color-text);
    color: var(--color-bg);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    transition: background 0.3s, transform 0.3s;
  }
  
